{
  "include": ["./src/"],
  "compilerOptions": {
    "outDir": "./dist/",
    "declarationDir": "dist/types",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "declaration": true,
    "inlineSourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  }
}
