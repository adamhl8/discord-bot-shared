{
  "include": ["src"],

  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist/types",
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "inlineSourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  }
}
